# Line Login Channel ID
LINE_CHANNEL_ID=YOUR_LINE_CHANNEL_ID

# Line Login Channel Secret
LINE_CHANNEL_SECRET=YOUR_LINE_CHANNEL_SECRET

# Public URL of this app, e.g. http://localhost:3000
APP_BASE_URL=http://localhost:3000

# Must match Line Developers callback URL
# Default: {APP_BASE_URL}/api/auth/line/callback
LINE_REDIRECT_PATH=/api/auth/line/callback

# Secret used by manual JWT sample (at least 32 chars)
SESSION_SECRET=replace_with_a_long_random_secret

# NextAuth URL (same as APP_BASE_URL in local)
NEXTAUTH_URL=http://localhost:3000

# Secret used by NextAuth JWT (at least 32 chars)
# If not set, code will fallback to SESSION_SECRET.
NEXTAUTH_SECRET=replace_with_a_long_random_secret
